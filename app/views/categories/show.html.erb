<div class="container">
  <div class="row">

    <ul class="nav nav-pills nav-pills-center">
      <li role="presentation">
        <%= link_to "All", root_path %>
      </li>
      <!-- 這邊判斷category==@category的時候要加 li.active -->
      <% @categories.each do |category| %>
        <li role="presentation" class="<%= "active" if category == 
        @category %>">
          <%= link_to category.name, category_path(category) %>
        </li>
      <% end %>
    </ul>

    <br>

    <div class= "article-index-container">
      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th>
              Replies_count
            </th>
            <th>
              title
            </th>
            <th>
              Last replied_at
            </th>
            <th>
              View_count
            </th>
            
          </tr>
        </thead>
        <tbody>
          
            <% @articles.each do |a| %>
            <tr> 
              <td>
                <%= a.replies_count %>
              </td>
              <td>
                <%= link_to(a) do %>
                <strong><%= a.title %></strong> 
                <% end %>
              </td>
              <td>
                2018-03-11
              </td>
              <td>
                <%= a.viewed_count %>
              </td>
            </tr>  
            <% end %>
           
         
            
          
        </tbody>
      </table>
    </div>

    <%= paginate @articles %>
      

  </div>
</div>