
<h1>Site Name</h1>


<div class="container">
  <div class="row">


    <ul class="nav nav-pills nav-pills-center">
      <li role="presentation" class= "active"><%= link_to"All", root_path %></li>
      <% @categories.each do |category|%> 
      <li role = "presentation"><%= link_to category.name, category_path(category) %></li>
      <% end %>
    </ul>
  
    


      


    <div class= "article-index-container">
      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th>
              Replies_count
            </th>
            <th>
              title
            </th>
            <th>
              Last replied_at
            </th>
            <th>
              View_count
            </th>
            
          </tr>
        </thead>
        <tbody>
          
            <% @articles.each do |a| %>
            <tr> 
              <td>
                <%=  Comment.where( :article_id => a.id ).size %>
              </td>
              <td>
                <%= link_to(a) do %>
                <strong><%= a.title %></strong> 
                <% end %>
              </td>
              <td>
                <%= a.created_at %>
              </td>
              <td>
                <%= a.impressionist_count %>
              </td>
            </tr>  
            <% end %>
           
         
            
          
        </tbody>
      </table>
    </div>

    <%= paginate @articles %>
      
  </div>
</div>



